{
  "name": "osm-helper",
  "description": "OSM Helper",
  "author": "Adam GÄ…sowski (gander)",
  "private": true,
  "version": "0.5.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "release": "release-it"
  },
  "dependencies": {
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@types/bun": "^1.1.13",
    "@types/node": "^22.9.3",
    "@vitejs/plugin-vue": "^5.2.0",
    "release-it": "^17.10.0",
    "typescript": "5.5.4",
    "vite": "5.4.6",
    "vite-plugin-monkey": "^4.0.6",
    "vue-tsc": "^2.1.10"
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "git": {
      "tagName": "v${version}",
      "commitArgs": [
        "-S"
      ]
    },
    "github": {
      "release": true,
      "draft": true,
      "assets": [
        "dist/**/*.js"
      ],
      "releaseName": "v${version}"
    },
    "hooks": {
      "after:bump": [
        "npm run build"
      ]
    }
  }
}
